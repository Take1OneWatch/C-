#include <stdio.h>
void main()
{
	int i = 1 ;int j = 1;
		for(i=9;i>=1;i--)
		{
		for(j=1;j<=i;j++)
		printf("%d*%d=%-4d",i,j,i*j);
	printf("\n");
		}
}
//倒九九乘法表！




#include<stdio.h>
void main()
{
	int s[10],i,max,min,j,k;
	for(i=0;i<10;i++)
	{scanf("%d",&s[i]);}
	max=min=s[0];
    j=k=0;
	for(i=0;i<10;i++)
	{if(max<s[i]){max=s[i];j=i;}
	 if(min>s[i]){min=s[i];k=i;}
	}
	printf("max:s[%d]=%d,min:s[%d]=%d",j,max,k,min);
    printf("\n");
}
//求最大最小值


#include<stdio.h>
void main()
{
	printf("请输入成绩:\n");
	int s[10],i,j,t;
	for(i=0;i<10;i++)
	{scanf("%d",&s[i]);}
//	for(j=9;j>=1;j--)
		for(i=0;i<9;i++)   //循环两次，第一次是循环比较，
			if(s[i]>s[i+1])   //如果出现s[i]<s[i+1]的情况一个循环就无法执行下去了！
			{t=s[i];s[i]=s[i+1];s[i+1]=t;}
			//如果只有一个循环则只能排好一个数而已！
  for(i=0;i<10;i++)
    printf("%4d",s[i]);
  printf("\n");
}
//排序
